<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_form_tds" model="ir.ui.view">
        <field name="name">sale.order.tds.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_header']" position="after">
                <group>
                    <group string="TDS Information">
                        <field name="tds_applicable"/>
                        <field name="tds_percent" invisible="not tds_applicable" readonly="1"/>
                        <field name="tds_amount" invisible="not tds_applicable" readonly="1"/>
                        <field name="amount_total_after_tds" invisible="not tds_applicable" readonly="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>

